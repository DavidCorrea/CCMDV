---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLangFromUrl, getLocalizedPath } from '../i18n/utils';
import { getTranslations } from '../i18n/translations';

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);
const currentPathname = Astro.url.pathname;
---

<BaseLayout title={`${t.nav.activities} - ${t.site.name}`} description={t.activities.description}>
  <div class="container mx-auto px-4 py-8 md:py-16">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6 text-center">
        {t.activities.title}
      </h1>
      
      <p class="text-xl text-gray-600 mb-12 text-center">
        {t.activities.subtitle}
      </p>

      <!-- Calendar Events Section -->
      <div id="calendar-events-section" class="mb-12">
        <div id="calendar-events-loading" class="text-center py-12">
          <p class="text-gray-600">Cargando eventos...</p>
        </div>

        <!-- Recurring Activities Section -->
        <div id="recurring-activities-section" class="mb-12 hidden">
          <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">
            {t.activities.subtitle}
          </h2>
          <div id="recurring-events-grid" class="grid md:grid-cols-2 gap-6">
            <!-- Recurring events will be inserted here by JavaScript -->
          </div>
          <div id="recurring-events-empty" class="hidden text-center py-8">
            <p class="text-gray-600">No hay actividades regulares programadas.</p>
          </div>
        </div>

        <!-- Upcoming Events Section -->
        <div id="upcoming-events-section" class="mb-12 hidden">
          <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">
            Próximos Eventos
          </h2>
          <div id="upcoming-events-grid" class="grid md:grid-cols-2 gap-6">
            <!-- One-time events will be inserted here by JavaScript -->
          </div>
          <div id="upcoming-events-empty" class="hidden text-center py-8">
            <p class="text-gray-600">No hay eventos próximos en este momento.</p>
          </div>
        </div>

        <div id="calendar-events-empty" class="hidden text-center py-12">
          <p class="text-gray-600 text-lg">No hay eventos próximos en este momento.</p>
        </div>
        <div id="calendar-events-error" class="hidden bg-yellow-50 border border-yellow-200 rounded-lg p-6 mt-4">
          <p class="text-yellow-800">
            <strong>No se pudieron cargar los eventos del calendario.</strong>
          </p>
          <p class="text-yellow-800 text-sm mt-2">
            Por favor, revisa la configuración de Google Calendar en las variables de entorno.
          </p>
        </div>
      </div>

    </div>
  </div>

  <script>
    (function() {
      // Helper functions for formatting dates/times in client timezone
      function formatTimeInClientTimezone(isoString) {
        const date = new Date(isoString);
        return date.toLocaleTimeString('es-ES', {
          hour: '2-digit',
          minute: '2-digit',
          timeZone: Intl.DateTimeFormat().resolvedOptions().timeZone
        });
      }

      function formatDayOfWeekInClientTimezone(isoString) {
        const date = new Date(isoString);
        const dayName = date.toLocaleDateString('es-ES', {
          weekday: 'long',
          timeZone: Intl.DateTimeFormat().resolvedOptions().timeZone
        });
        if (dayName && dayName.length > 0) {
          return dayName.charAt(0).toUpperCase() + dayName.slice(1).toLowerCase();
        }
        return dayName;
      }

      function formatDateInClientTimezone(isoString) {
        const date = new Date(isoString);
        const formatted = date.toLocaleDateString('es-ES', {
          weekday: 'long',
          month: 'long',
          day: 'numeric',
          timeZone: Intl.DateTimeFormat().resolvedOptions().timeZone
        });
        if (formatted && formatted.length > 0) {
          return formatted.charAt(0).toUpperCase() + formatted.slice(1);
        }
        return formatted;
      }

      function createEventCard(event) {
        const eventCard = document.createElement('div');
        eventCard.className = 'bg-white p-6 rounded-lg shadow-md border border-gray-200 hover:shadow-lg transition-shadow';
        
        let dateTimeHtml = '';
        if (event.hasTime) {
          const clientTime = formatTimeInClientTimezone(event.start);
          
          if (event.isRecurring) {
            const clientDay = formatDayOfWeekInClientTimezone(event.start);
            dateTimeHtml = `
              <p class="text-lg font-semibold text-gray-900 mb-3">
                ${clientDay} a las ${clientTime}
              </p>
            `;
          } else {
            const clientDate = formatDateInClientTimezone(event.start);
            dateTimeHtml = `
              <p class="text-lg font-semibold text-gray-900 mb-3">
                ${clientDate} a las ${clientTime}
              </p>
            `;
          }
        } else {
          if (event.isRecurring) {
            const clientDay = formatDayOfWeekInClientTimezone(event.start);
            dateTimeHtml = `
              <p class="text-lg font-semibold text-gray-900 mb-3">
                ${clientDay}
              </p>
            `;
          } else {
            const clientDate = formatDateInClientTimezone(event.start);
            dateTimeHtml = `
              <p class="text-lg font-semibold text-gray-900 mb-3">
                ${clientDate}
              </p>
            `;
          }
        }
        
        eventCard.innerHTML = `
          <h3 class="text-xl font-semibold text-blue-600 mb-3">${event.title}</h3>
          ${dateTimeHtml}
          ${event.description ? `<p class="text-gray-700 mb-4 line-clamp-3">${event.description}</p>` : ''}
          ${event.location ? `<p class="text-sm text-gray-600 mt-2"><strong>Ubicación:</strong> ${event.location}</p>` : ''}
        `;
        
        return eventCard;
      }

      // Fetch calendar events from Edge Function
      async function fetchCalendarEvents() {
        const eventsSection = document.getElementById('calendar-events-section');
        const loadingState = document.getElementById('calendar-events-loading');
        const errorState = document.getElementById('calendar-events-error');
        const emptyState = document.getElementById('calendar-events-empty');
        
        // Recurring activities section
        const recurringSection = document.getElementById('recurring-activities-section');
        const recurringGrid = document.getElementById('recurring-events-grid');
        const recurringEmpty = document.getElementById('recurring-events-empty');
        
        // Upcoming events section
        const upcomingSection = document.getElementById('upcoming-events-section');
        const upcomingGrid = document.getElementById('upcoming-events-grid');
        const upcomingEmpty = document.getElementById('upcoming-events-empty');
        
        if (!eventsSection || !loadingState) return;

        try {
          const response = await fetch('/api/calendar-events?maxResults=50');
          
          if (!response.ok) {
            throw new Error(`Failed to fetch calendar events: ${response.status}`);
          }

          const data = await response.json();
          loadingState.classList.add('hidden');

          // Get events from separate arrays
          const recurringEvents = data.recurringEvents || [];
          const upcomingEvents = data.upcomingEvents || [];

          if (recurringEvents.length > 0 || upcomingEvents.length > 0) {
            
            // Hide empty state
            if (emptyState) emptyState.classList.add('hidden');
            if (errorState) errorState.classList.add('hidden');
            
            // Handle recurring events
            if (recurringEvents.length > 0 && recurringSection && recurringGrid) {
              recurringGrid.innerHTML = '';
              recurringEvents.forEach((event) => {
                recurringGrid.appendChild(createEventCard(event));
              });
              recurringSection.classList.remove('hidden');
              if (recurringEmpty) recurringEmpty.classList.add('hidden');
            } else {
              if (recurringSection) recurringSection.classList.add('hidden');
            }

            // Handle upcoming events
            if (upcomingEvents.length > 0 && upcomingSection && upcomingGrid) {
              upcomingGrid.innerHTML = '';
              upcomingEvents.forEach((event) => {
                upcomingGrid.appendChild(createEventCard(event));
              });
              upcomingSection.classList.remove('hidden');
              if (upcomingEmpty) upcomingEmpty.classList.add('hidden');
            } else {
              if (upcomingSection) upcomingSection.classList.add('hidden');
            }
          } else {
            // No events at all
            if (recurringSection) recurringSection.classList.add('hidden');
            if (upcomingSection) upcomingSection.classList.add('hidden');
            if (emptyState) emptyState.classList.remove('hidden');
            if (errorState) errorState.classList.add('hidden');
          }
        } catch (error) {
          console.error('Error fetching calendar events:', error);
          loadingState.classList.add('hidden');
          if (recurringSection) recurringSection.classList.add('hidden');
          if (upcomingSection) upcomingSection.classList.add('hidden');
          if (emptyState) emptyState.classList.add('hidden');
          if (errorState) {
            errorState.classList.remove('hidden');
          }
        }
      }

      // Fetch events on page load
      fetchCalendarEvents();
    })();
  </script>
</BaseLayout>

