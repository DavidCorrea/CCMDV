---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLangFromUrl, getLocalizedPath } from '../i18n/utils';
import { getTranslations } from '../i18n/translations';
import { RecurringEventsList } from '../components/RecurringEventsList';
import { EventsList } from '../components/EventsList';

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);
const currentPathname = Astro.url.pathname;
---

<BaseLayout title={`${t.nav.activities} - ${t.site.name}`} description={t.activities.description}>
  <div class="container mx-auto px-4 py-8 md:py-16">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6 text-center">
        {t.activities.title}
      </h1>
      
      <p class="text-xl text-gray-600 mb-12 text-center">
        {t.activities.subtitle}
      </p>

      <!-- Calendar Events Section -->
      <div class="mb-12">
        <!-- Recurring Activities Section -->
        <div class="mb-12">
          <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">
            {t.activities.subtitle}
          </h2>
          <RecurringEventsList client:load emptyMessage="No hay actividades regulares programadas." />
        </div>

        <!-- Upcoming Events Section -->
        <div class="mb-12">
          <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">
            Próximos Eventos
          </h2>
          <EventsList 
            type="upcoming" 
            client:load 
            emptyMessage="No hay eventos próximos en este momento." 
          />
        </div>
      </div>

    </div>
  </div>
</BaseLayout>

