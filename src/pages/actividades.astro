---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLangFromUrl, getLocalizedPath } from '../i18n/utils';
import { getTranslations } from '../i18n/translations';

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);
const currentPathname = Astro.url.pathname;
---

<BaseLayout title={`${t.nav.activities} - ${t.site.name}`} description={t.activities.description}>
  <div class="container mx-auto px-4 py-8 md:py-16">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6 text-center">
        {t.activities.title}
      </h1>
      
      <p class="text-xl text-gray-600 mb-12 text-center">
        {t.activities.subtitle}
      </p>

      <!-- Calendar Events Section -->
      <div id="calendar-events-section" class="mb-12">
        <div id="calendar-events-loading" class="text-center py-12">
          <p class="text-gray-600">Cargando eventos...</p>
        </div>
        <div id="calendar-events-grid" class="grid md:grid-cols-2 gap-6 hidden">
          <!-- Events will be inserted here by JavaScript -->
        </div>
        <div id="calendar-events-empty" class="hidden text-center py-12">
          <p class="text-gray-600 text-lg">No hay eventos próximos en este momento.</p>
        </div>
        <div id="calendar-events-error" class="hidden bg-yellow-50 border border-yellow-200 rounded-lg p-6 mt-4">
          <p class="text-yellow-800">
            <strong>No se pudieron cargar los eventos del calendario.</strong>
          </p>
          <p class="text-yellow-800 text-sm mt-2">
            Por favor, revisa la configuración de Google Calendar en las variables de entorno.
          </p>
        </div>
      </div>

      <section class="bg-gray-50 border border-gray-200 rounded-lg p-6 md:p-8">
        <h2 class="text-2xl font-semibold text-gray-900 mb-4">{t.activities.special.title}</h2>
        <p class="text-gray-700 mb-4">
          {t.activities.special.content}
        </p>
        <a
          href={getLocalizedPath('/contacto', lang, currentPathname)}
          class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium"
        >
          {t.activities.special.button}
        </a>
      </section>
    </div>
  </div>

  <script>
    (function() {
      // Fetch calendar events from Edge Function
      async function fetchCalendarEvents() {
        const eventsSection = document.getElementById('calendar-events-section');
        const eventsGrid = document.getElementById('calendar-events-grid');
        const loadingState = document.getElementById('calendar-events-loading');
        const errorState = document.getElementById('calendar-events-error');
        const emptyState = document.getElementById('calendar-events-empty');
        
        if (!eventsSection || !eventsGrid || !loadingState) return;

        try {
          const response = await fetch('/api/calendar-events?maxResults=20');
          
          if (!response.ok) {
            throw new Error(`Failed to fetch calendar events: ${response.status}`);
          }

          const data = await response.json();
          loadingState.classList.add('hidden');

          if (data.events && data.events.length > 0) {
            eventsGrid.innerHTML = '';
            eventsGrid.classList.remove('hidden');
            if (emptyState) emptyState.classList.add('hidden');
            if (errorState) errorState.classList.add('hidden');
            
            data.events.forEach((event: any) => {
              const eventCard = document.createElement('div');
              eventCard.className = 'bg-white p-6 rounded-lg shadow-md border border-gray-200 hover:shadow-lg transition-shadow';
              
              // Build date/time display HTML from pre-formatted data
              let dateTimeHtml = '';
              if (event.hasTime && event.displayTime) {
                // Event with time
                if (event.isRecurring) {
                  // Recurring event - show day of week and time
                  dateTimeHtml = `
                    <p class="text-sm text-gray-600">
                      <strong>Día:</strong> ${event.displayDate} a las ${event.displayTime}
                    </p>
                  `;
                } else {
                  // One-time event - show full date and time
                  dateTimeHtml = `
                    <p class="text-sm text-gray-600 mb-2">
                      <strong>Fecha:</strong> ${event.displayDate}
                    </p>
                    <p class="text-sm text-gray-600">
                      <strong>Hora:</strong> ${event.displayTime}
                    </p>
                  `;
                }
              } else {
                // All-day event
                if (event.isRecurring) {
                  // Recurring all-day event - show day of week only
                  dateTimeHtml = `
                    <p class="text-sm text-gray-600">
                      <strong>Día:</strong> ${event.displayDate}
                    </p>
                  `;
                } else {
                  // One-time all-day event - show full date
                  dateTimeHtml = `
                    <p class="text-sm text-gray-600">
                      <strong>Fecha:</strong> ${event.displayDate}
                    </p>
                  `;
                }
              }
              
              eventCard.innerHTML = `
                <h3 class="text-xl font-semibold text-blue-600 mb-3">${event.title}</h3>
                ${event.description ? `<p class="text-gray-700 mb-4 line-clamp-3">${event.description}</p>` : ''}
                ${dateTimeHtml}
                ${event.location ? `<p class="text-sm text-gray-600 mt-2"><strong>Ubicación:</strong> ${event.location}</p>` : ''}
              `;
              
              eventsGrid.appendChild(eventCard);
            });
          } else {
            // No events
            eventsGrid.classList.add('hidden');
            if (emptyState) emptyState.classList.remove('hidden');
            if (errorState) errorState.classList.add('hidden');
          }
        } catch (error) {
          console.error('Error fetching calendar events:', error);
          loadingState.classList.add('hidden');
          eventsGrid.classList.add('hidden');
          if (emptyState) emptyState.classList.add('hidden');
          if (errorState) {
            errorState.classList.remove('hidden');
          }
        }
      }

      // Fetch events on page load
      fetchCalendarEvents();
    })();
  </script>
</BaseLayout>

