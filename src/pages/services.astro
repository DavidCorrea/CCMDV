---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLangFromUrl, getLocalizedPath } from '../i18n/utils';
import { getTranslations } from '../i18n/translations';

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);
const currentPathname = Astro.url.pathname;
---

<BaseLayout title={`${t.nav.services} - ${t.site.name}`} description={t.services.description}>
  <div class="container mx-auto px-4 py-8 md:py-16">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6 text-center">
        {t.services.title}
      </h1>
      
      <p class="text-xl text-gray-600 mb-12 text-center">
        {t.services.subtitle}
      </p>

      <div class="grid md:grid-cols-2 gap-8 mb-12">
        {t.services.items.map((service) => (
          <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
            <h2 class="text-2xl font-semibold text-blue-600 mb-3">{service.title}</h2>
            <p class="text-gray-700 leading-relaxed mb-4">{service.description}</p>
            {service.time && (
              <p class="text-sm text-gray-600">
                <strong>{t.services.time}:</strong> {service.time}
              </p>
            )}
          </div>
        ))}
      </div>

      <section class="bg-gray-50 border border-gray-200 rounded-lg p-6 md:p-8">
        <h2 class="text-2xl font-semibold text-gray-900 mb-4">{t.services.special.title}</h2>
        <p class="text-gray-700 mb-4">
          {t.services.special.content}
        </p>
        <a
          href={getLocalizedPath('/contact', lang, currentPathname)}
          class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium"
        >
          {t.services.special.button}
        </a>
      </section>
    </div>
  </div>
</BaseLayout>

