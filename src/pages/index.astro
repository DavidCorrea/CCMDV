---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLangFromUrl, getLocalizedPath } from '../i18n/utils';
import { getTranslations } from '../i18n/translations';

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);
const currentPathname = Astro.url.pathname;
---

<BaseLayout>
  <div class="container mx-auto px-4 py-8 md:py-16">
    <section class="text-center mb-12 md:mb-16">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4 px-4">
        {t.common.welcome} a {t.site.name}
      </h1>
      <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto px-4">
        {t.site.description}
      </p>
    </section>

    <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 mt-8 md:mt-16">
      <div class="bg-white p-4 md:p-6 rounded-lg shadow-md border border-gray-200">
        <h2 class="text-xl md:text-2xl font-semibold mb-3 md:mb-4 text-blue-600">{t.nav.about}</h2>
        <p class="text-gray-600 text-sm md:text-base">
          Conoce más sobre nuestra iglesia y nuestra misión.
        </p>
        <a
          href={getLocalizedPath('/nosotros', lang, currentPathname)}
          class="inline-block mt-4 text-blue-600 hover:text-blue-700 font-medium text-sm md:text-base transition-colors"
        >
          {t.common.learnMore} →
        </a>
      </div>

      <div class="bg-white p-4 md:p-6 rounded-lg shadow-md border border-gray-200">
        <h2 class="text-xl md:text-2xl font-semibold mb-3 md:mb-4 text-blue-600">{t.nav.activities}</h2>
        <p class="text-gray-600 text-sm md:text-base">
          Información sobre nuestros servicios y actividades.
        </p>
        <a
          href={getLocalizedPath('/actividades', lang, currentPathname)}
          class="inline-block mt-4 text-blue-600 hover:text-blue-700 font-medium text-sm md:text-base transition-colors"
        >
          {t.common.learnMore} →
        </a>
      </div>

      <div class="bg-white p-4 md:p-6 rounded-lg shadow-md border border-gray-200">
        <h2 class="text-xl md:text-2xl font-semibold mb-3 md:mb-4 text-blue-600">{t.nav.contact}</h2>
        <p class="text-gray-600 text-sm md:text-base">
          Ponte en contacto con nosotros.
        </p>
        <a
          href={getLocalizedPath('/contacto', lang, currentPathname)}
          class="inline-block mt-4 text-blue-600 hover:text-blue-700 font-medium text-sm md:text-base transition-colors"
        >
          {t.common.learnMore} →
        </a>
      </div>
    </section>

    <!-- Upcoming Events Section -->
    <section id="upcoming-events-home" class="mt-12 md:mt-16">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6 text-center">
        Próximos Eventos
      </h2>
      <div id="upcoming-events-loading" class="text-center py-8">
        <p class="text-gray-600">Cargando eventos...</p>
      </div>
      <div id="upcoming-events-grid" class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 hidden">
        <!-- Upcoming events will be inserted here by JavaScript -->
      </div>
      <div id="upcoming-events-empty" class="hidden text-center py-8">
        <p class="text-gray-600">No hay eventos próximos en este momento.</p>
      </div>
    </section>
  </div>

  <script>
    (function() {
      // Fetch and display upcoming events (one-time events only) on home page
      async function fetchUpcomingEvents() {
        const loadingState = document.getElementById('upcoming-events-loading');
        const eventsGrid = document.getElementById('upcoming-events-grid');
        const emptyState = document.getElementById('upcoming-events-empty');
        
        if (!loadingState || !eventsGrid) return;

        try {
          const response = await fetch('/api/calendar-events?maxResults=50');
          
          if (!response.ok) {
            throw new Error(`Failed to fetch calendar events: ${response.status}`);
          }

          const data = await response.json();
          loadingState.classList.add('hidden');

          if (data.events && data.events.length > 0) {
            // Filter to show only one-time events (not recurring)
            const upcomingEvents = data.events.filter((event: any) => !event.isRecurring);
            
            if (upcomingEvents.length > 0) {
              eventsGrid.innerHTML = '';
              eventsGrid.classList.remove('hidden');
              if (emptyState) emptyState.classList.add('hidden');
              
              // Helper function to format time in client's timezone
              const formatTimeInClientTimezone = (isoString: string): string => {
                const date = new Date(isoString);
                return date.toLocaleTimeString('es-ES', {
                  hour: '2-digit',
                  minute: '2-digit',
                  timeZone: Intl.DateTimeFormat().resolvedOptions().timeZone
                });
              };

              // Helper function to format full date in client's timezone (capitalized day, no year)
              const formatDateInClientTimezone = (isoString: string): string => {
                const date = new Date(isoString);
                const formatted = date.toLocaleDateString('es-ES', {
                  weekday: 'long',
                  month: 'long',
                  day: 'numeric',
                  timeZone: Intl.DateTimeFormat().resolvedOptions().timeZone
                });
                // Capitalize first letter of the entire string (which starts with the day name)
                if (formatted && formatted.length > 0) {
                  return formatted.charAt(0).toUpperCase() + formatted.slice(1);
                }
                return formatted;
              };

              // Show only the first 3 upcoming events
              upcomingEvents.slice(0, 3).forEach((event: any) => {
                const eventCard = document.createElement('div');
                eventCard.className = 'bg-white p-6 rounded-lg shadow-md border border-gray-200 hover:shadow-lg transition-shadow';
                
                // Build date/time display HTML - format time on client side for timezone accuracy
                let dateTimeHtml = '';
                if (event.hasTime) {
                  const clientTime = formatTimeInClientTimezone(event.start);
                  const clientDate = formatDateInClientTimezone(event.start);
                  // Same style as recurring events - date and time on same line
                  dateTimeHtml = `
                    <p class="text-lg font-semibold text-gray-900 mb-3">
                      ${clientDate} a las ${clientTime}
                    </p>
                  `;
                } else {
                  // All-day event - format date in client timezone (capitalized, no year)
                  const clientDate = formatDateInClientTimezone(event.start);
                  dateTimeHtml = `
                    <p class="text-lg font-semibold text-gray-900 mb-3">
                      ${clientDate}
                    </p>
                  `;
                }
                
                eventCard.innerHTML = `
                  <h3 class="text-xl font-semibold text-blue-600 mb-3">${event.title}</h3>
                  ${dateTimeHtml}
                  ${event.description ? `<p class="text-gray-700 mb-4 line-clamp-3">${event.description}</p>` : ''}
                  ${event.location ? `<p class="text-sm text-gray-600 mt-2"><strong>Ubicación:</strong> ${event.location}</p>` : ''}
                `;
                
                eventsGrid.appendChild(eventCard);
              });
            } else {
              eventsGrid.classList.add('hidden');
              if (emptyState) emptyState.classList.remove('hidden');
            }
          } else {
            eventsGrid.classList.add('hidden');
            if (emptyState) emptyState.classList.remove('hidden');
          }
        } catch (error) {
          console.error('Error fetching special events:', error);
          loadingState.classList.add('hidden');
          eventsGrid.classList.add('hidden');
          if (emptyState) emptyState.classList.add('hidden');
        }
      }

      // Fetch events on page load
      fetchUpcomingEvents();
    })();
  </script>
</BaseLayout>
