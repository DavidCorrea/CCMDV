---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLangFromUrl, getLocalizedPath } from '../i18n/utils';
import { getTranslations } from '../i18n/translations';

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);
const currentPathname = Astro.url.pathname;
---

<BaseLayout>
  <div class="container mx-auto px-4 py-8 md:py-16">
    <section class="text-center mb-12 md:mb-16">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4 px-4">
        {t.common.welcome} a {t.site.name}
      </h1>
      <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto px-4">
        {t.site.description}
      </p>
    </section>

    <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 mt-8 md:mt-16">
      <div class="bg-white p-4 md:p-6 rounded-lg shadow-md border border-gray-200">
        <h2 class="text-xl md:text-2xl font-semibold mb-3 md:mb-4 text-blue-600">{t.nav.about}</h2>
        <p class="text-gray-600 text-sm md:text-base">
          Conoce más sobre nuestra iglesia y nuestra misión.
        </p>
        <a
          href={getLocalizedPath('/nosotros', lang, currentPathname)}
          class="inline-block mt-4 text-blue-600 hover:text-blue-700 font-medium text-sm md:text-base transition-colors"
        >
          {t.common.learnMore} →
        </a>
      </div>

      <div class="bg-white p-4 md:p-6 rounded-lg shadow-md border border-gray-200">
        <h2 class="text-xl md:text-2xl font-semibold mb-3 md:mb-4 text-blue-600">{t.nav.activities}</h2>
        <p class="text-gray-600 text-sm md:text-base">
          Información sobre nuestros servicios y actividades.
        </p>
        <a
          href={getLocalizedPath('/actividades', lang, currentPathname)}
          class="inline-block mt-4 text-blue-600 hover:text-blue-700 font-medium text-sm md:text-base transition-colors"
        >
          {t.common.learnMore} →
        </a>
      </div>

      <div class="bg-white p-4 md:p-6 rounded-lg shadow-md border border-gray-200">
        <h2 class="text-xl md:text-2xl font-semibold mb-3 md:mb-4 text-blue-600">{t.nav.contact}</h2>
        <p class="text-gray-600 text-sm md:text-base">
          Ponte en contacto con nosotros.
        </p>
        <a
          href={getLocalizedPath('/contacto', lang, currentPathname)}
          class="inline-block mt-4 text-blue-600 hover:text-blue-700 font-medium text-sm md:text-base transition-colors"
        >
          {t.common.learnMore} →
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
