---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLangFromUrl, getLocalizedPath } from '../i18n/utils';
import { getTranslations } from '../i18n/translations';

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);
const currentPathname = Astro.url.pathname;
---

<BaseLayout title={`${t.nav.about} - ${t.site.name}`} description={t.about.description}>
  <div class="container mx-auto px-4 py-8 md:py-16">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6 text-center">
        {t.about.title}
      </h1>
      
      <div class="prose prose-lg max-w-none">
        <p class="text-xl text-gray-600 mb-8 text-center">
          {t.about.subtitle}
        </p>

        <section class="mb-12">
          <h2 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-4">{t.about.mission.title}</h2>
          <p class="text-gray-700 leading-relaxed mb-4">
            {t.about.mission.content}
          </p>
        </section>

        <section class="mb-12">
          <h2 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-4">{t.about.vision.title}</h2>
          <p class="text-gray-700 leading-relaxed mb-4">
            {t.about.vision.content}
          </p>
        </section>

        <section class="mb-12">
          <h2 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-4">{t.about.values.title}</h2>
          <ul class="list-disc list-inside space-y-2 text-gray-700">
            {t.about.values.items.map((value) => (
              <li>{value}</li>
            ))}
          </ul>
        </section>

        <section class="bg-blue-50 border border-blue-200 rounded-lg p-6 md:p-8">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">{t.about.join.title}</h2>
          <p class="text-gray-700 mb-4">
            {t.about.join.content}
          </p>
          <a
            href={getLocalizedPath('/contact', lang, currentPathname)}
            class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium"
          >
            {t.about.join.button}
          </a>
        </section>
      </div>
    </div>
  </div>
</BaseLayout>

