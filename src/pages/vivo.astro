---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLangFromUrl } from '../i18n/utils';
import { getTranslations } from '../i18n/translations';
import { checkLiveStream, getRecentVideos, formatDate, type YouTubeLiveStream, type YouTubeVideo } from '../utils/youtube';

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);

// Get YouTube API credentials from environment variables
const youtubeApiKey = import.meta.env.PUBLIC_YOUTUBE_API_KEY;
const youtubeChannelId = import.meta.env.PUBLIC_YOUTUBE_CHANNEL_ID;

let liveStream: YouTubeLiveStream | null = null;
let recentVideos: YouTubeVideo[] = [];

if (youtubeApiKey && youtubeChannelId) {
  // Check for live stream first
  liveStream = await checkLiveStream(youtubeChannelId, youtubeApiKey);
  
  // If no live stream, get recent videos
  if (!liveStream) {
    recentVideos = await getRecentVideos(youtubeChannelId, youtubeApiKey, 12);
  }
}
---

<BaseLayout title={`${t.live.title} - ${t.site.name}`} description={t.live.title}>
  <div class="container mx-auto px-4 py-8 md:py-16">
    <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-8 text-center">
      {t.live.title}
    </h1>

    {!youtubeApiKey || !youtubeChannelId ? (
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 mb-8">
        <p class="text-yellow-800">
          <strong>Configuración requerida:</strong> Para mostrar transmisiones en vivo y videos, 
          necesitas configurar las variables de entorno <code class="bg-yellow-100 px-2 py-1 rounded">PUBLIC_YOUTUBE_API_KEY</code> y 
          <code class="bg-yellow-100 px-2 py-1 rounded">PUBLIC_YOUTUBE_CHANNEL_ID</code> en tu archivo <code class="bg-yellow-100 px-2 py-1 rounded">.env</code>.
        </p>
        <p class="text-yellow-800 mt-2 text-sm">
          Obtén tu API key en: <a href="https://console.cloud.google.com/" target="_blank" rel="noopener noreferrer" class="underline">Google Cloud Console</a>
        </p>
      </div>
    ) : liveStream ? (
      <!-- Live Stream Section -->
      <section class="mb-12">
        <div class="bg-red-600 text-white px-4 py-2 rounded-t-lg inline-block">
          <span class="flex items-center gap-2">
            <span class="w-3 h-3 bg-white rounded-full animate-pulse"></span>
            {t.live.liveNow}
          </span>
        </div>
        <div class="bg-gray-900 rounded-b-lg overflow-hidden">
          <div class="aspect-video">
            <iframe
              src={`https://www.youtube.com/embed/${liveStream.videoId}?autoplay=1`}
              title={liveStream.title}
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
              class="w-full h-full"
            ></iframe>
          </div>
        </div>
        <div class="mt-4">
          <h2 class="text-2xl font-semibold text-gray-900 mb-2">{liveStream.title}</h2>
          <a
            href={`https://www.youtube.com/watch?v=${liveStream.videoId}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium transition-colors"
          >
            {t.live.watchOnYoutube}
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </a>
        </div>
      </section>
    ) : (
      <!-- No Live Stream Message -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-8 text-center">
        <p class="text-blue-800 text-lg">{t.live.noLive}</p>
      </div>
    )}

    <!-- Recent Videos Section -->
    {recentVideos.length > 0 && (
      <section>
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">
          {t.live.recentVideos}
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {recentVideos.map((video) => (
            <a
              href={`https://www.youtube.com/watch?v=${video.videoId}`}
              target="_blank"
              rel="noopener noreferrer"
              class="group bg-white rounded-lg shadow-md border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow"
            >
              <div 
                class="relative w-full bg-cover bg-center bg-gray-200 overflow-hidden"
                style={`padding-bottom: 56.25%; background-image: url('${video.thumbnail}');`}
                role="img"
                aria-label={video.title}
              >
                <img
                  src={video.thumbnail}
                  alt=""
                  class="sr-only"
                  loading="lazy"
                />
                <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
                  <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-25 transition-opacity duration-300"></div>
                  <svg class="w-16 h-16 text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300 relative z-10" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"/>
                  </svg>
                </div>
              </div>
              <div class="p-4">
                <h3 class="font-semibold text-gray-900 mb-2 line-clamp-2 group-hover:text-blue-600 transition-colors">
                  {video.title}
                </h3>
                <div class="text-sm text-gray-600">
                  <span>{formatDate(video.publishedAt)}</span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </section>
    )}

    {recentVideos.length === 0 && !liveStream && youtubeApiKey && youtubeChannelId && (
      <div class="text-center py-12">
        <p class="text-gray-600">No se encontraron videos recientes.</p>
      </div>
    )}

    <!-- Debug info (remove in production) -->
    {recentVideos.length > 0 && (
      <script define:vars={{ videos: recentVideos }}>
        console.log('Videos loaded:', videos.length);
        if (videos.length > 0) {
          console.log('First video:', {
            videoId: videos[0].videoId,
            thumbnail: videos[0].thumbnail,
            title: videos[0].title
          });
          // Test thumbnail URL
          const img = new Image();
          img.onload = () => console.log('Thumbnail loaded successfully:', videos[0].thumbnail);
          img.onerror = () => console.error('Thumbnail failed to load:', videos[0].thumbnail);
          img.src = videos[0].thumbnail;
        }
      </script>
    )}
  </div>
</BaseLayout>

