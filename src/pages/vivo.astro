---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLangFromUrl } from '../i18n/utils';
import { getTranslations } from '../i18n/translations';
import { YouTubeContent } from '../components/YouTubeContent';

// Explicitly pre-render this page so social media crawlers can read metadata
export const prerender = true;

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);
const urlParams = new URLSearchParams(Astro.url.search);
const demoMode = urlParams.get('demo') === 'true';
---

<BaseLayout title={`${t.live.title} - ${t.site.name}`}>
  <div class="container mx-auto px-4 py-8 md:py-16">
    <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-8 text-center">
      {t.live.title}
    </h1>

    <YouTubeContent 
      client:load
      liveNowText={t.live.liveNow}
      noLiveText={t.live.noLive}
      recentVideosText={t.live.recentVideos}
      demoMode={demoMode}
    />
  </div>
</BaseLayout>

