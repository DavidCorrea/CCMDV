---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLangFromUrl } from '../i18n/utils';
import { getTranslations } from '../i18n/translations';
import { YouTubeContent } from '../components/YouTubeContent';

export const prerender = false;

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);
const urlParams = new URLSearchParams(Astro.url.search);
const demoMode = urlParams.get('demo') === 'true';

// Fetch YouTube data server-side for OG image
let ogImage: string | undefined = undefined;
const siteUrl = Astro.site || 'https://ccmdv.com';
const apiUrl = new URL('/api/youtube-data', siteUrl);
if (demoMode) {
  apiUrl.searchParams.set('demo', 'true');
}

try {
  const response = await fetch(apiUrl.toString());
  if (response.ok) {
    const data = await response.json();
    if (data.liveStream && data.liveStream.thumbnail) {
      // Use YouTube thumbnail as OG image when live stream is active
      ogImage = data.liveStream.thumbnail;
    }
  }
} catch (error) {
  console.error('Error fetching YouTube data for OG image:', error);
  // Fall back to default OG image (BaseLayout will handle this)
}

// Only pass image prop if we have a YouTube thumbnail, otherwise BaseLayout uses default
const layoutProps = ogImage 
  ? { 
      title: `${t.live.title} - ${t.site.name}`,
      image: ogImage,
      imageWidth: 1280,
      imageHeight: 720
    }
  : { 
      title: `${t.live.title} - ${t.site.name}`
    };
---

<BaseLayout {...layoutProps}>
  <div class="container mx-auto px-4 py-8 md:py-16">
    <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-8 text-center">
      {t.live.title}
    </h1>

    <YouTubeContent 
      client:load
      liveNowText={t.live.liveNow}
      noLiveText={t.live.noLive}
      recentVideosText={t.live.recentVideos}
      demoMode={demoMode}
    />
  </div>
</BaseLayout>

